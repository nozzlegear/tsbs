{
  "name": "tsbs",
  "version": "0.1.0",
  "description": "TypeScript Build System",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": "https://github.com/nozzlegear/tsbs",
  "author": "Joshua Harms <joshua@nozzlegear.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc --pretty",
    "prepublishOnly": "npm run build",
    "test": "yarn jest"
  },
  "devDependencies": {
    "@types/jest": "^23.1.3",
    "jest": "^23.2.0",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {},
  "files": [
    "LICENSE",
    "README.md",
    "package.json",
    "tsconfig.json",
    "lib"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "tests/.*\\.tests?\\.(t|j)sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/\\./"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
